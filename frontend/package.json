{
  "name": "ai-file-organizer-electron",
  "version": "1.0.0",
  "private": true,
  "description": "Electron + React + Vite + Tailwind frontend for AI File Organizer",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "rimraf dist && vite build && tsc -p tsconfig.json",
    "make": "npm run build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^32.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.sohan.ai-file-organizer",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": { "target": "dmg" },
    "win": { "target": "nsis" },
    "linux": { "target": "AppImage" }
  }
}
